{
  "id": "com.prayerssapp",
  "version": "1.0.3",
  "compatibility": " >=5.0.0",
  "sdk": 3,
  "brandColor": "#2698DD",
  "name": {
    "en": "Prayers Alert"
  },
  "description": {
    "en": "Trigger muslim prayers timing events based on your location"
  },
  "category": "tools",
  "tags": {
    "en": [
      "prayer",
      "prayers",
      "muslim",
      "timing",
      "time",
      "islam",
      "quran",
      "alarm"
    ]
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "homepage": "https://github.com/DPANET/PrayersHomeySDK3",
  "permissions": [
    "homey:manager:speech-output"
  ],
  "author": {
    "email": "dpanet@hotmail.com",
    "name": "Omar"
  },
  "bugs": {
    "url": "https://github.com/DPANET/PrayersHomeySDK3/issues"
  },
  "flow": {
    "triggers": [
      {
        "id": "prayer_trigger_specific",
        "title": {
          "en": "Trigger to a specific prayer time"
        },
        "tokens": [
          {
            "name": "prayerName",
            "type": "string",
            "title": {
              "en": "Prayer Name"
            }
          },
          {
            "name": "prayerTime",
            "type": "string",
            "title": {
              "en": "Prayer Time"
            }
          }
        ],
        "args": [
          {
            "type": "dropdown",
            "name": "prayerName",
            "values": [
              {
                "id": "FAJR",
                "label": {
                  "en": "Fajr"
                }
              },
              {
                "id": "DHUR",
                "label": {
                  "en": "Dhur"
                }
              },
              {
                "id": "ASR",
                "label": {
                  "en": "Asr"
                }
              },
              {
                "id": "MAGHRIB",
                "label": {
                  "en": "Maghrib"
                }
              },
              {
                "id": "Isha",
                "label": {
                  "en": "Isha"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "prayer_trigger_all",
        "title": {
          "en": "Trigger to all prayers time"
        },
        "tokens": [
          {
            "name": "prayerName",
            "type": "string",
            "title": {
              "en": "Prayer Name"
            }
          },
          {
            "name": "prayerTime",
            "type": "string",
            "title": {
              "en": "Prayer Time"
            }
          }
        ]
      },
      {
        "id": "prayer_trigger_before_after_specific",
        "title": {
          "en": "Trigger before/after specific prayer time"
        },
        "tokens": [
          {
            "name": "prayerName",
            "type": "string",
            "title": {
              "en": "Prayer Name"
            }
          },
          {
            "name": "prayerTimeCalculated",
            "type": "string",
            "title": {
              "en": "Alert Time"
            }
          }
        ],
        "args": [
          {
            "type": "dropdown",
            "name": "prayerAfterBefore",
            "values": [
              {
                "id": "Before",
                "label": {
                  "en": "Before"
                }
              },
              {
                "id": "After",
                "label": {
                  "en": "After"
                }
              }
            ]
          },
          {
            "type": "dropdown",
            "name": "prayerName",
            "values": [
              {
                "id": "FAJR",
                "label": {
                  "en": "Fajr"
                }
              },
              {
                "id": "DHUR",
                "label": {
                  "en": "Dhur"
                }
              },
              {
                "id": "ASR",
                "label": {
                  "en": "Asr"
                }
              },
              {
                "id": "MAGHRIB",
                "label": {
                  "en": "Maghrib"
                }
              },
              {
                "id": "Isha",
                "label": {
                  "en": "Isha"
                }
              }
            ]
          },
          {
            "type": "number",
            "name": "prayerDurationTime",
            "min": 0,
            "step": 1,
            "placeholder": {
              "en": "Set duration in number >=0"
            }
          },
          {
            "type":"dropdown",
            "name":"prayerDurationType",
            "values":[
              {
                "id":"seconds",
                "label":{"en":"second(s)"}
              },
              {
                "id":"minutes",
                "label":{"en":"minute(s)"}
              },
              {
                "id":"hours",
                "label":{"en":"hour(s)"}
              }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "athan_action",
        "title": {
          "en": "Play athan sound"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "athan_dropdown",
            "values": [
              {
                "id": "athan_short",
                "label": {
                  "en": "Short"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "api": {
    "getPrayersAdjustments": {
      "method": "get",
      "path": "/PrayerManager/PrayersAdjustments",
      "public": true
    },
    "getPrayersSettings": {
      "method": "get",
      "path": "/PrayerManager/PrayersSettings",
      "public": true
    },
    "getPrayers": {
      "method": "get",
      "path": "/PrayerManager/Prayers",
      "public": true
    },
    "getPrayersView": {
      "method": "get",
      "path": "/PrayerManager/PrayersView",
      "public": true
    },
    "getPrayersByCalculation": {
      "method": "get",
      "path": "/PrayerManager/PrayersByCalculation",
      "public": true
    },
    "loadSettings": {
      "method": "get",
      "path": "/PrayerManager/LoadSettings",
      "public": true
    },
    "setPrayersByCalculation": {
      "method": "post",
      "path": "/PrayerManager/PrayersByCalculation",
      "public": true
    },
    "getPrayersLocationSettings": {
      "method": "get",
      "path": "/PrayerManager/PrayersLocationSettings",
      "public": true
    },
    "searchLocation": {
      "method": "get",
      "path": "/PrayerManager/SearchLocation",
      "public": true
    }
  }
}